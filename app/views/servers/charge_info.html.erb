<script src="/assets/jquery.flot.min.js"></script>
<script src="/assets/jquery.flot.time.min.js"></script>

<div class="col-md-10 col-md-offset-1">
	<div class="well">
		<h3>服务器：《<%= @server.name%>》总充值 <%= @info['sum'] %> 元</h3>
	</div>
	<div class="col-md-10 col-md-offset-1">
		<h5>日充值报表</h5>
		<div id="daily" style="width:800px;height:400px"></div>
	</div>
	<div class="col-md-10 col-md-offset-1">
		<h4>玩家充值报表</h4>
		<table class="table" >
			<tr>
				<th>id</th>
				<th>名字</th>
				<th>等级</th>
				<th>账号</th>
				<th>充值次数</th>
				<th>充值总额</th>
				<th>详情</th>
			</tr>
			<% @info['user'].each do |i| %>
			<tr>
				<td><%= i['id'] %></td>
				<td><%= i['name'] %></td>
				<td><%= i['lev'] %></td>
				<td><%= i['acc'] %></td>
				<td><%= i['pay_times'] %></td>
				<td><%= i['p'] %></td>
				<td><%= link_to("详情", platform_server_charge_info_user_path(@server.platform, @server, i['id'])) %></td>
			</tr>
			<% end %>
		</table>
	</div>
</div>

<script type="text/javascript">
$(function() {
	<% 
	def daily_item_to_js item
     time = DateTime.strptime(item['day'], "%Y-%m-%d").to_time.to_i * 1000
     "[#{time},#{item['totle']}]"
  end %>
	data = [<%= @info['daily'].collect{|i|daily_item_to_js(i)}.join(",") %>]
	$.plot(
		$("#daily"), 
		[data], 
		{
			xaxis: {
				mode: "time", 
				minTickSize: [1, "day"]
			},
			points: {show: true},
			lines: {show: true}
		});
})
</script>